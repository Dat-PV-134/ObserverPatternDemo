<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".implement_ex.YoutubeActivity">

    <TextView
        android:id="@+id/tvData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginHorizontal="30dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnNotifyNormal"/>

    <TextView
        android:id="@+id/btnNotifyNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:text="Notify Normal People"
        android:gravity="center"
        android:paddingHorizontal="18dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnNotifyPremium"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:textSize="16sp"
        android:background="#FAD5AD"/>

    <TextView
        android:id="@+id/btnNotifyPremium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:text="Notify Premium People"
        android:gravity="center"
        android:textColor="@color/black"
        android:paddingHorizontal="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnNotifyNormal"
        android:textSize="16sp"
        android:background="#7BEF7D"/>
</androidx.constraintlayout.widget.ConstraintLayout>